{
	"info": {
		"_postman_id": "2aa9c90f-1a73-407f-b4ec-fac7a4c8473f",
		"name": "example_api_tests_with_issues",
		"description": "Example Postman collection for Scout monitoring",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "Health Check",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Status code is 200\", function () {",
							"    pm.response.to.have.status(200);",
							"});",
							"",
							"pm.test(\"Response time is less than 200ms\", function () {",
							"    pm.expect(pm.response.responseTime).to.be.below(200);",
							"});"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{URL}}/status/200",
					"host": [
						"{{URL}}"
					],
					"path": [
						"status",
						"200"
					]
				},
				"description": "Basic health check test"
			},
			"response": []
		},
		{
			"name": "JSON Response Test",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Response is JSON\", function () {",
							"    pm.response.to.be.json;",
							"});",
							"",
							"pm.test(\"Response has url property\", function () {",
							"    var jsonData = pm.response.json();",
							"    pm.expect(jsonData).to.have.property('url');",
							"});"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{URL}}/invalid",
					"host": [
						"{{URL}}"
					],
					"path": [
						"invalid"
					]
				},
				"description": "Test JSON response parsing"
			},
			"response": []
		},
		{
			"name": "POST Request Test",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Response contains posted data\", function () {",
							"    var jsonData = pm.response.json();",
							"    pm.expect(jsonData.json.message).to.eql(\"Hello from Scout\");",
							"});"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n    \"message\": \"Hello from Scout\",\n    \"timestamp\": \"{{$timestamp}}\"\n}"
				},
				"url": {
					"raw": "{{URL}}/post",
					"host": [
						"{{URL}}"
					],
					"path": [
						"post"
					]
				},
				"description": "Test POST request with JSON body"
			},
			"response": []
		},
		{
			"name": "Response Headers Test",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Content-Type header is present\", function () {",
							"    pm.response.to.have.header(\"Content-Type\");",
							"});"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{URL}}/headers",
					"host": [
						"{{URL}}"
					],
					"path": [
						"headers"
					]
				},
				"description": "Test response headers"
			},
			"response": []
		},
		{
			"name": "Delayed Response Test",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Response time is acceptable\", function () {",
							"    pm.expect(pm.response.responseTime).to.be.below(3000);",
							"});"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{URL}}/delay/{{DELAY_TIME}}",
					"host": [
						"{{URL}}"
					],
					"path": [
						"delay",
						"{{DELAY_TIME}}"
					]
				},
				"description": "Test delayed response (1 second)"
			},
			"response": []
		}
	]
